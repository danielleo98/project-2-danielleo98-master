extends layout

block content
  h1= title
  h2="Frontend Test"
  form(id="createform" action="/users" method="post")
    input(type="text", name="username", placeholder="Username")
    br
    input(type="text", name="name", placeholder="Name")
    br
    input(type="text", name="bio", placeholder="Bio")
    br
  .ui.red.button#create
    |   Create User
  br
  br
  br
  .ui.orange.button#read
    |   Read Users
  br
  br
  br
  form(id="findform" action="/users/:username" method="get")
    input(type="text", name="username", placeholder="Username")
    br
  .ui.teal.button#find
    |   Find User
  br
  br
  br
  form(id="updateform" action="/users/:username" method="put")
    input(type="text", name="username", placeholder="Username")
    br
    input(type="text", name="name", placeholder="Name")
    br
    input(type="text", name="bio", placeholder="Bio")
    br
  .ui.green.button#update
    |   Update User
  br
  br
  br
  form(id="destroyform" action="/users/:username" method="delete")
    input(type="text", name="username", placeholder="Username")
    br
  .ui.violet.button#destroy
    |   Destroy User
  br
  br
  br
  form(id="searchform" action="/users?search=" method="get")
    input(type="text", name="search", placeholder="Search")
    br
  .ui.black.button#search
    |   Search Users